@model IEnumerable<HospitalManagementSystem.Models.PatientReport>
@{
    ViewBag.Title = "PatientList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Patient's List</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Patient ID</th>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>DOB</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>New Payment</th>
                    <th>View/Edit Payment</th>
                    <th>Select</th>
                    <th>Report Summary</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.patient.PatientID</td>
                    <td><img src="@Url.Content(@item.patient.Photo)" style="height:80px;width:80px;" /></td>
                    <td>@item.patient.FirstName @item.patient.LastName</td>
                    <td>@item.patient.DOB</td>
                    <td>@item.patient.Email</td>
                    <td>@item.patient.Phone</td>
                    <td>
                        <a href="@Url.Action("Create","Payments",new { id=item.patient.PatientID})"><span class="glyphicon glyphicon-credit-card" aria-hidden="true"></span></a>
                        @*@Html.ActionLink("New", "Create", "Treatments", new { id = item.patient.PatientID }, new { })*@
                    </td>
                    <td>
                        <a href="@Url.Action("Index","Payments",new { id=item.patient.PatientID})"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span></a>
                        @*@Html.ActionLink("New", "Create", "Treatments", new { id = item.patient.PatientID }, new { })*@
                    </td>
                    <td>
                        <a href="@Url.Action("ExistingPatientReport","Patients",new { id=item.patient.PatientID})"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span></a>
                        @*@Html.ActionLink("View", "ExistingPatientReport", new { id = item.patient.PatientID })*@
                    </td>
                    <td>
                        <a href="@Url.Action("PatientReportSummary","Patients",new { id=item.patient.PatientID})"><span class="glyphicon glyphicon-file" aria-hidden="true"></span></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>