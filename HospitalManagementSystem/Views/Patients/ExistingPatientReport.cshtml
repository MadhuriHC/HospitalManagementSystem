@model IEnumerable<HospitalManagementSystem.Models.PatientReport>
@{
    ViewBag.Title = "ExistingPatientReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script type="text/javascript" src="@Url.Action("~/scripts/jquery-3.3.1.min.js")"></script>
    <link href="~/Content/Styles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet">
</head>
<body>

    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Patient Details</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Patient ID</th>
                    <th>Photo</th>
                    <th>Name</th>
                    <th>DOB</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Blood Group</th>
                    <th>Doctor's Name</th>
                    <th>Add</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                <tr>
                    <td>@i.patient.PatientID</td>
                    <td><img src=@Url.Content(i.patient.Photo) style="height:80px;width:80px;" /></td>
                    <td>@i.patient.FirstName @i.patient.LastName</td>
                    <td>@i.patient.DOB</td>
                    <td>@i.patient.Email</td>
                    <td>@i.patient.Phone</td>
                    <td>@i.patient.BloodGroup</td>
                    <td>@i.doctor.FirstName @i.doctor.LastName</td>
                    <td>
                        <a href='@Url.Action("Create", "Treatments",new { id=@i.patient.PatientID})' class="btn btn-primary col-2 glyphicon" -plus>Add</a>
                    </td>
                </tr>
                        break;
                        }

                </tbody>
        </table>
    </div>       

    <div class="container-fluid py-4">
        <h4 class="text-center text-uppercase">Treatment Details</h4>
        <table class="table table-striped table-bordered">
            <thead class="bg-dark text-white">
                <tr>
                    
                    <th>Treatment</th>
                    <th>Edit</th>
                    <th>Details</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                   
                    <td>
                        Checkup Date: @item.treatment.CheckupDate
                        <br />Symptoms: @item.treatment.Symptoms
                        <br />Diagnosis: @item.treatment.Diagnosis
                        <br />Medicine: @item.treatment.Medicine
                        <br />Doses: @item.treatment.Doses
                        <br />Before Meal: @item.treatment.BeforeMeal
                        <br />Advice: @item.treatment.Advice
                    </td>
                    <td><a href="@Url.Action("Edit","Treatments",new { id=item.treatment.TreatmentID,doses=item.treatment.Doses,bm=item.treatment.BeforeMeal })"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a></td>
                    <td><a href="@Url.Action("Details","Treatments",new { id=item.treatment.TreatmentID})"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span></a></td>
                    <td><a href="@Url.Action("Delete","Treatments",new { id=item.treatment.TreatmentID })"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                </tr>
                    
                }
            </tbody>
        </table>
    </div>

    <div>
        <button onclick="location.href='@Url.Action("PatientList")';return false;" class="btn btn-dark">Back To List</button>
    </div>
</body>
</html>
