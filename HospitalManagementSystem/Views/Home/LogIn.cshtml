@model HospitalManagementSystem.Models.Registration
@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
   @* @Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body >
    <div class=" d-flex justify-content-center align-items-center vh-100 " style="background-color:#E5E5E5;">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true, "Login failed");
            <div class="card" style="width: 40rem;  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.5), 0 6px 20px 0 rgba(0, 0, 0, 0.25);">
                <div class=" card-header text-center bg-dark" style="margin-top:-1px; margin-left:-1px; margin-right:-1px">
                    <h4 style="color:white">Login</h4>
                </div>
                <div class="card-body">
                    <div class="pl-3 form-group row">
                        <label class="col-sm-4 col-form-label">Email</label>
                        <div class="col-sm-7">
                            @Html.TextBox("Email", "", "", new { @class = "form-control" })
                            @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="pl-2 form-group row">
                        <label class="col-sm-4 col-form-label">Password</label>
                        <div class="col-sm-7">
                            @Html.TextBox("Password", "", "", new { @class = "form-control" })
                            @Html.ValidationMessage("Password", "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="pl-2 form-group row">

                        <label class="col-sm-4 col-form-label">User Category</label>
                        <div class="col-sm-7">
                            @Html.DropDownList("Category", new List<SelectListItem>
                                {
                                    new SelectListItem{Text="Super Admin",Value="SuperAdmin"},
                                    new SelectListItem{Text="Doctor",Value="Doctor"},
                                    new SelectListItem{Text="Accountant",Value="Accountant"},
                                    new SelectListItem{Text="Receptionist",Value="Receptionist"}
                               })
                        </div>
                    </div>
                    <br />

                    <div class=" d-flex justify-content-center form-row">
                        <div class="form-group">
                            <button type="submit" value="submit" class="btn btn-dark">Login</button>
                        </div>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <div class="form-group">
                            <button onclick="location.href='@Url.Action("Register", "Home")';return false;" class="btn btn-primary bg-dark">Sign up!</button>
                        </div>
                        <br/><label style="color:green;font-size:20px">@ViewBag.msg</label>
                    </div>
                    </div>
            </div>
        }
    </div>
</body>
</html>