@model HospitalManagementSystem.Models.Payment

@{
    ViewBag.Title = "Details";
    @if (ViewBag.n == 3)
    {
        Layout = "~/Views/Shared/_LayoutAcc.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2>Details</h2>

<div>
    <h4>Payment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Patient.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Patient.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PayableAmount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PayableAmount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PaymentDate)
        </dt>

        <dd>
            @Model.PaymentDate.ToShortDateString()
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PaymentMethod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PaymentMethod)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>
</div>
<p>
    <button onclick="location.href='@Url.Action("Index","Payments",new { id=Model.PatientID})';return false;" class="btn btn-dark">Back To List</button>
</p>
