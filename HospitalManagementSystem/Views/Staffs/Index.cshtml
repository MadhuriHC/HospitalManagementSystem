@model IEnumerable<HospitalManagementSystem.Models.Staff>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <style>
        th {
            color:white;
        }
        td {
            color: #294b83;
        }

        .btn-staff,
        .btn-staff:visited,
        .btn-staff:hover,
        .btn-staff:focus {
            background-color: #294b83 !important;
            border-color: #294b83 !important;
        }

            .btn-staff:active {
                background-color: #294b83 !important;
                border-color: #294b83 !important;
                color: white !important;
            }
    </style>
</head>
<br/>
<br/>
<h2>Staff's List</h2>

<a href="@Url.Action("Create", "staffs")" class="btn btn-staff col-2">
    <i class="fa fa-plus" style="color: white"></i>
    <span>
        <strong style="color:white">Create</strong>
    </span>
</a>
<br/>
<br/>
    <table class="table" >
        <thead style="background-color:#294b83">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SCategory)
                </th>
                <th>Edit</th>
                <th>Details</th>
                <th>Delete</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SCategory)
                </td>
                <td><a href="@Url.Action("Edit","Staffs",new { id=item.StaffID ,cat=item.SCategory})"><span class="glyphicon glyphicon-edit" style="color:#294b83" aria-hidden="true"></span></a></td>
                <td><a href="@Url.Action("Details","Staffs",new { id=item.StaffID })"><span class="glyphicon glyphicon-list-alt"  style="color:#294b83" aria-hidden="true"></span></a></td>
                <td><a href="@Url.Action("Delete","Staffs",new { id=item.StaffID })"><span class="glyphicon glyphicon-trash" style="color:#294b83" aria-hidden="true"></span></a></td>
            </tr>
        }

    </table>
